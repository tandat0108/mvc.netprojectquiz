@model ProjectQuiz.Data.Quiz

@{
    ViewData["Title"] = "Delete Quiz";
}

<h2>Delete Quiz</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this quiz?</h4>
    <p>
        Quiz Title: <strong>@Model.Title</strong>
    </p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.QuizId" method="post">
    <input type="hidden" asp-for="QuizId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
</form>
