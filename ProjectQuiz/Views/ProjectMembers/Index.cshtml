@model IEnumerable<ProjectQuiz.Data.ProjectMember>

@{
    ViewData["Title"] = "Thành viên của dự án";
}

<h2>Thành viên của dự án</h2>

<p>
    <a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Thêm thành viên mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên người dùng</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username) <!-- Hiển thị tên người dùng -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role) <!-- Hiển thị vai trò của người dùng -->
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
