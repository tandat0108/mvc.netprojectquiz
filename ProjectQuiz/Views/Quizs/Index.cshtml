@model IEnumerable<ProjectQuiz.Data.Quiz>

@{
    ViewData["Title"] = "Quizzes Index";
}

<div class="dashboard-container">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
            <h2>Quizzes</h2>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Projects/Details/@ViewBag.ProjectId">Project Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Members" asp-route-id="@ViewBag.ProjectId">Members</a>
                </li>
                <li class="nav-item">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Quizs" asp-route-id="@ViewBag.ProjectId">Quizzes</a>
              
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Results" asp-route-id="@ViewBag.ProjectId">Results</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 content">
            <h3>Quiz List</h3>
            <p>
                <a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-success">Create New Quiz</a>
            </p>
            <p>Current Project ID: @ViewBag.ProjectId</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Answers</th>
                        <th>Correct Answer</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.QuestionText</strong>
                            </td>
                            <td>
                                <!-- Split answers and display them with labels A, B, C, D, ... -->
                                <ul>
                                    @{
                                        var answers = item.Answers.Split(',');
                                        var letters = new[] { 'A', 'B', 'C', 'D', 'E', 'F', 'G', 'H' };
                                        for (int i = 0; i < answers.Length; i++)
                                        {
                                            var answer = answers[i].Trim();
                                            if (!string.IsNullOrWhiteSpace(answer))
                                            {
                                                <li><strong>@letters[i])</strong> @answer</li>
                                            }
                                        }
                                    }
                                </ul>
                            </td>
                            <td>
                                <!-- Display the correct answer based on its position -->
                                @if (item.IsCorrect > 0 && item.IsCorrect <= letters.Length)
                                {
                                    var correctAnswerLetter = letters[item.IsCorrect - 1];
                                    <strong>Correct Answer: </strong>
                                    @correctAnswerLetter
                                }
                                else
                                {
                                    <strong>Correct Answer: </strong>
                                    <!-- Handle cases with invalid IsCorrect value -->
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.QuizId" asp-route-projectId="@ViewBag.ProjectId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.QuizId" asp-route-projectId="@ViewBag.ProjectId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.QuizId" asp-route-projectId="@ViewBag.ProjectId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Styles for Dashboard Layout -->
<style>
    .dashboard-container {
        padding: 20px;
    }

    .sidebar {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
    }

    .nav-link {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .content {
        padding-left: 30px;
    }

    .table {
        margin-top: 20px;
    }
</style>

