<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCproject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCproject.styles.css" asp-append-version="true" />

    <style>
        .navbar {
            padding: 10px 20px;
            font-size: 16px;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .navbar a {
            color: #000;
            text-decoration: none;
        }

            .navbar a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="ChangePassword" class="text-dark me-3">Change Password</a>
                        <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link text-dark">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="text-dark">Login</a>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MVCproject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
