@{
    ViewData["Title"] = "Details";
}

<div class="dashboard-container">
    <div class="row">
        <div class="col-md-3 sidebar">
            <h2>@Model.Name</h2>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Details" asp-route-id="@Model.Id">Details</a>
                </li>
                <li class="nav-item">
                    <!-- Liên kết tới ProjectMembersController với action Index -->
                    <a class="nav-link" asp-controller="ProjectMembers" asp-action="Index" asp-route-projectId="@Model.Id">Members</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Quizs" asp-route-id="@Model.Id">Quizzes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Results" asp-route-id="@Model.Id">Results</a>
                </li>
            </ul>
        </div>

        <div class="col-md-9 content">
            <div class="header">
                <h3>Introduction Video:</h3>
                <button class="btn btn-primary float-right">Publish Project</button>
            </div>

            @if (!string.IsNullOrEmpty(Model.IntroductionVideoUrl))
            {
                var embedUrl = Model.IntroductionVideoUrl.Replace("watch?v=", "embed/");
                <iframe width="560" height="315"
                        src="@embedUrl"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            }
            else
            {
                <p>No video available</p>
            }

            <h3 class="mt-4">Project Description:</h3>
            <p>@Model.Description</p>

            <!-- Hiển thị ProjectId từ TempData -->
            <p>Current Project ID: @TempData["CurrentProjectId"]</p>

            <div class="actions mt-4">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-secondary">Edit</a>
                <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 20px;
    }

    .sidebar {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
    }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .nav-link {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .content {
        padding-left: 30px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .actions {
        margin-top: 20px;
    }
</style>
